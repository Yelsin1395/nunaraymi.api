{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@default/*": ["src/default/*"],
      "@kapuc/*": ["src/kapuc/*"],
      "@kamachiq/*": ["src/kamachiq/*"],
      "@usuario/*": ["src/usuario/*"],
      "@ruwana/*": ["src/ruwana/*"]
    },
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
